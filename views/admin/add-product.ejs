<%- include('../partials/header') %>

    <main>
        <section class="section">
            <div class="container">
                <div class="form-container" style="max-width: 800px;">
                    <h1 class="section-title" style="font-size: 2rem;">Add New Product</h1>

                    <% if (typeof query !== 'undefined' && query.error) { %>
                        <div class="error-message">
                            <%= query.error %>
                        </div>
                        <% } %>

                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="error-message" style="color: #dc3545; background: #f8d7da; padding: 1rem; border-radius: 5px; margin-bottom: 1.5rem;">
                                    <%= error %>
                                </div>
                                <% } %>

                                    <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Product Name</label>
                                            <input type="text" name="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea name="description" rows="5" required></textarea>
                                        </div>
                                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                                            <div class="form-group">
                                                <label>Price (Rs)</label>
                                                <input type="number" name="price" step="0.01" min="0" required>
                                            </div>
                                            <div class="form-group">
                                                <label>Original Price (Rs) - Optional</label>
                                                <input type="number" name="originalPrice" step="0.01" min="0">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Category</label>
                                            <select name="category" required>
                            <option value="Men">Men</option>
                            <option value="Women">Women</option>
                            <option value="Kids">Kids</option>
                            <option value="Accessories">Accessories</option>
                        </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Sizes (Select multiple)</label>
                                            <select name="sizes" multiple style="height: 100px;">
                            <option value="XS">XS</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                            <option value="XXL">XXL</option>
                        </select>
                                            <small style="color: var(--text-light);">Hold Ctrl/Cmd to select multiple</small>
                                        </div>
                                        <div class="form-group">
                                            <label>Colors (comma-separated)</label>
                                            <input type="text" name="colors" placeholder="e.g., Red, Blue, Green">
                                        </div>
                                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                                            <div class="form-group">
                                                <label>Stock Quantity</label>
                                                <input type="number" name="stock" min="0" required>
                                            </div>
                                            <div class="form-group">
                                                <label style="display: flex; align-items: center; gap: 0.5rem;">
                                <input type="checkbox" name="featured" style="width: auto;">
                                Featured Product
                            </label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Shipping Fee (Rs) - default 250</label>
                                            <input type="number" name="shippingFee" step="0.01" min="0" value="250" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Product Images (jpg, jpeg, png, max 5MB each) - you can select multiple</label>
                                            <input type="file" name="images" accept=".jpg,.jpeg,.png" multiple required>
                                        </div>
                                        <div style="display: flex; gap: 1rem;">
                                            <button type="submit" class="btn btn-add-cart" style="flex: 1;">Add Product</button>
                                            <a href="/admin/products" class="btn" style="background: var(--text-light); color: white; padding: 0.75rem 1.5rem; text-decoration: none;">Cancel</a>
                                        </div>
                                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include('../partials/footer') %>