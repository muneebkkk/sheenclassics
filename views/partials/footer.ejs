<script>
    // ── Toast notification system
    function showNotification(message, type = 'info') {
        const n = document.getElementById('notification');
        if (!n) return;

        const configs = {
            success: {
                bg: '#1a1a1a',
                border: 'rgba(39,174,96,0.4)',
                icon: '✓',
                iconColor: '#27ae60'
            },
            error: {
                bg: '#1a1a1a',
                border: 'rgba(231,76,60,0.4)',
                icon: '✕',
                iconColor: '#e74c3c'
            },
            info: {
                bg: '#1a1a1a',
                border: 'rgba(212,175,55,0.4)',
                icon: '✦',
                iconColor: '#d4af37'
            },
        };
        const c = configs[type] || configs.info;

        n.style.cssText = `
        display: flex;
        position: fixed;
        top: 88px;
        right: 20px;
        z-index: 9999;
        max-width: 320px;
        min-width: 240px;
        padding: 0.9rem 1.2rem;
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25);
        font-size: 0.85rem;
        font-weight: 500;
        font-family: var(--font-body);
        background: ${c.bg};
        border: 1px solid ${c.border};
        color: rgba(255,255,255,0.88);
        align-items: center;
        gap: 0.7rem;
        opacity: 0;
        transform: translateX(20px);
        transition: opacity 0.3s ease, transform 0.3s ease;
    `;

        n.innerHTML = `
        <span style="width:22px;height:22px;border-radius:50%;background:${c.border};display:flex;align-items:center;justify-content:center;color:${c.iconColor};font-size:0.75rem;flex-shrink:0;">${c.icon}</span>
        <span>${message}</span>
    `;

        // Animate in
        requestAnimationFrame(() => {
            requestAnimationFrame(() => {
                n.style.opacity = '1';
                n.style.transform = 'translateX(0)';
            });
        });

        // Auto dismiss
        clearTimeout(n._timer);
        n._timer = setTimeout(() => {
            n.style.opacity = '0';
            n.style.transform = 'translateX(20px)';
            setTimeout(() => {
                n.style.display = 'none';
            }, 300);
        }, 3500);
    }

    // ── Navbar scroll state
    const navbar = document.getElementById('main-navbar');
    if (navbar) {
        window.addEventListener('scroll', () => {
            navbar.classList.toggle('scrolled', window.scrollY > 30);
        }, {
            passive: true
        });
    }

    // ── Mobile menu
    document.addEventListener('DOMContentLoaded', () => {
        const toggle = document.getElementById('mobile-toggle');
        const menu = document.getElementById('nav-menu');
        const overlay = document.getElementById('nav-overlay');

        if (!toggle || !menu) return;

        function openMenu() {
            toggle.classList.add('open');
            menu.classList.add('active');
            overlay && overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
            toggle.setAttribute('aria-expanded', 'true');
        }

        function closeMenu() {
            toggle.classList.remove('open');
            menu.classList.remove('active');
            overlay && overlay.classList.remove('active');
            document.body.style.overflow = '';
            toggle.setAttribute('aria-expanded', 'false');
        }

        toggle.addEventListener('click', () => {
            menu.classList.contains('active') ? closeMenu() : openMenu();
        });

        overlay && overlay.addEventListener('click', closeMenu);

        // Close on nav link click (mobile)
        menu.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth <= 768) closeMenu();
            });
        });

        // Close on resize to desktop
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) closeMenu();
        });
    });
</script>

