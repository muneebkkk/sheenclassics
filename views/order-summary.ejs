<%- include('partials/header') %>

    <main>
        <section class="section">
            <div class="container cart-container">
                <h1 class="section-title">Order Summary</h1>

                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message">
                        <%= error %>
                    </div>
                    <% } %>

                        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
                            <div>
                                <h2 style="margin-bottom: 1.5rem; font-family: 'Playfair Display', serif;">Order Items</h2>
                                <% cart.items.forEach(item => { %>
                                    <div class="cart-item">
                                        <img src="<%= item.product.images && item.product.images[0] ? item.product.images[0] : '/images/p1.jpeg' %>" alt="<%= item.product.name %>" class="cart-item-image">
                                        <div class="cart-item-details">
                                            <h3 class="cart-item-name">
                                                <%= item.product.name %>
                                            </h3>
                                            <p style="color: var(--text-light);">Quantity:
                                                <%= item.quantity %> (Stock:
                                                    <%= item.product.stock %>)</p>
                                            <div class="cart-item-price">Rs.
                                                <%= (item.product.price * item.quantity).toFixed(2) %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>

                                        <div style="margin-top: 2rem;">
                                            <h2 style="margin-bottom: 1.5rem; font-family: 'Playfair Display', serif;">Shipping Address</h2>
                                            <form action="/orders/create" method="POST" id="order-form">
                                                <div class="form-group">
                                                    <label>Street Address</label>
                                                    <input type="text" name="shippingAddress[street]" required>
                                                </div>
                                                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                                                    <div class="form-group">
                                                        <label>City</label>
                                                        <input type="text" name="shippingAddress[city]" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>State</label>
                                                        <input type="text" name="shippingAddress[state]" required>
                                                    </div>
                                                </div>
                                                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                                                    <div class="form-group">
                                                        <label>Zip Code</label>
                                                        <input type="text" name="shippingAddress[zipCode]" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Country</label>
                                                        <input type="text" name="shippingAddress[country]" required>
                                                    </div>
                                                </div>

                                                <h3 style="margin: 2rem 0 1rem; font-family: 'Playfair Display', serif;">Order Confirmation</h3>
                                                <div class="form-group">
                                                    <p style="margin-bottom: 0.75rem; color: var(--text-light); font-size: 0.95rem;">
                                                        Please enter your active WhatsApp number. We will contact you on WhatsApp shortly to confirm your order and finalize the payment.
                                                    </p>
                                                    <label style="display: block; padding: 1rem; border: 2px solid var(--border-color); border-radius: 5px; margin-bottom: 0.5rem;">
                                    <span style="display: block; font-weight: 500; margin-bottom: 0.5rem;">WhatsApp Number</span>
                                    <input type="text" name="whatsappNumber" id="whatsapp-number" placeholder="e.g. 03XXXXXXXXX or +923XXXXXXXXXX" required style="width: 100%; padding: 0.5rem; border: 2px solid var(--border-color); border-radius: 5px;">
                                </label>
                                                    <small id="whatsapp-helper" style="display: block; color: var(--text-light); font-size: 0.85rem; margin-top: 0.25rem;">
                                    We’ll reach out to you on WhatsApp for order confirmation shortly after you place your order.
                                </small>
                                                    <input type="hidden" name="paymentMethod" value="whatsapp">
                                                </div>

                                                <input type="hidden" name="couponCode" id="applied-coupon" value="">
                                            </form>
                                        </div>
                            </div>

                            <div>
                                <div class="cart-summary">
                                    <h2 style="margin-bottom: 1.5rem; font-family: 'Playfair Display', serif;">Order Summary</h2>
                                    <div class="summary-row">
                                        <span>Subtotal:</span>
                                        <span>Rs.<%= subtotal.toFixed(2) %></span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Discount:</span>
                                        <span id="discount">-Rs.<%= discount.toFixed(2) %></span>
                                    </div>
                                    <div class="summary-row">
                                        <span>Shipping:</span>
                                        <span id="order-shipping">Rs.<%= (typeof deliveryCharge !== 'undefined' ? deliveryCharge : 0).toFixed(2) %></span>
                                    </div>
                                    <div class="summary-total">
                                        <div class="summary-row">
                                            <span>Total:</span>
                                            <span id="total">Rs.<%= total.toFixed(2) %></span>
                                        </div>
                                    </div>

                                    <div class="coupon-section">
                                        <h3 style="margin-bottom: 1rem;">Apply Coupon Code</h3>
                                        <div class="coupon-input-group">
                                            <input type="text" id="coupon-code" placeholder="Enter coupon code">
                                            <button type="button" class="btn btn-add-cart" onclick="applyCoupon()">Apply</button>
                                        </div>
                                    </div>

                                    <button type="submit" form="order-form" class="btn btn-add-cart" style="width: 100%; margin-top: 1.5rem;">Place Order</button>
                                </div>
                            </div>
                        </div>
            </div>
        </section>
    </main>

    <script>
        // Form validation for WhatsApp-only confirmation
        document.getElementById('order-form').addEventListener('submit', function(e) {
            const whatsappInput = document.getElementById('whatsapp-number');
            const helper = document.getElementById('whatsapp-helper');
            const rawNumber = (whatsappInput.value || '').trim();

            // Pakistani mobile formats: 03XXXXXXXXX or +923XXXXXXXXXX
            const whatsappPattern = /^(03\d{9}|\+92\d{10})$/;

            if (!rawNumber) {
                e.preventDefault();
                alert('Please enter your WhatsApp number');
                whatsappInput.focus();
                return false;
            }

            if (!whatsappPattern.test(rawNumber)) {
                e.preventDefault();
                alert('Please enter a valid WhatsApp number in 03XXXXXXXXX or +923XXXXXXXXXX format');
                if (helper) {
                    helper.textContent = 'Number format should be 03XXXXXXXXX or +923XXXXXXXXXX (Pakistani mobile).';
                    helper.style.color = '#c33';
                }
                whatsappInput.focus();
                return false;
            }

            if (helper) {
                helper.textContent = 'Perfect! We’ll contact you on WhatsApp shortly to confirm your order.';
                helper.style.color = 'var(--text-light)';
            }

            // Allow form submission to proceed; user will be redirected to order details
            alert('Thank you! We will contact you on WhatsApp shortly to confirm your order.');
            return true;
        });
    </script>

    <%- include('partials/footer') %>